# API Configuration
API_PORT=23000
API_URL=https://api.news.biaz.hurated.com
NODE_ENV=development

# Web Client Configuration
WEB_PORT=22000
WEB_URL=https://news.biaz.hurated.com

# Database
DATABASE_URL=postgresql://biaz:biaz_password@postgres:5432/biaz_finance

# Redis Cache
REDIS_URL=redis://redis:6379

# Google Gemini API
GOOGLE_API_KEY=your_google_api_key_here
GEMINI_MODEL=gemini-2.5-pro

# Azure OpenAI (for chat/text generation)
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_ENDPOINT=https://your-endpoint.cognitiveservices.azure.com
AZURE_API_VERSION=2025-01-01-preview
AZURE_DEPLOYMENT_NAME=gpt-4.1

# Azure DALL-E (for image generation - separate deployment required)
DALLE_API_KEY=your_dalle_api_key_here
DALLE_ENDPOINT=https://your-dalle-endpoint.services.ai.azure.com
DALLE_API_VERSION=2025-04-01-preview
DALLE_DEPLOYMENT_NAME=FLUX-1.1-pro

# AI Provider: 'azure' or 'gemini'
AI_PROVIDER=azure

# Apify (for news scraping and data extraction)
APIFY_API_TOKEN=your_apify_api_token_here
APIFY_USER_ID=your_apify_user_id_here
